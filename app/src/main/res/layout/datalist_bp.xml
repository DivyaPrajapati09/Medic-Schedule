<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:id="@+id/textView"
            style="@style/TextStyle"
            android:layout_weight="1"
            android:text="@string/txt_systol"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/textView2"
            style="@style/TextStyle"
            android:layout_weight="1"
            android:text="@string/txt_dystol" />

        <TextView
            android:id="@+id/textView4"
            style="@style/TextStyle"
            android:layout_weight="1"
            android:text="@string/txt_pulse" />

        <TextView
            android:id="@+id/textView3"
            style="@style/TextStyle"
            android:layout_weight="1"
            android:text="@string/txt_time" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/blood_pressure_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:choiceMode="singleChoice"
            android:divider="@color/black" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_blood_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/blood_pressure_list"
            android:onClick="onAddBloodPressureClickListener"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_action_add"
            app:elevation="0dp"
            tools:ignore="RelativeOverlap,RtlHardcoded" />
    </RelativeLayout>


</LinearLayout>