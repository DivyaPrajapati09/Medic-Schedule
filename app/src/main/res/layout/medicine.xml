<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/m_name"
                style="@style/EditText"
                android:hint="@string/enter_medicine_name"
                android:inputType="textPersonName" />

            <Spinner
                android:id="@+id/reminder"
                style="@style/EditText"
                android:entries="@array/Reminder_arrays"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/reminder_time"
                style="@style/EditText"
                android:hint="@string/enter_reminder_time" />

            <EditText
                android:id="@+id/duration"
                style="@style/EditText"
                android:hint="@string/enter_duration"
                android:inputType="number" />

            <EditText
                android:id="@+id/start_date"
                style="@style/EditText"
                android:hint="@string/enter_the_start_date" />

            <EditText
                android:id="@+id/days"
                style="@style/EditText"
                android:hint="@string/enter_the_no_of_days"
                android:inputType="number" />

            <Spinner
                android:id="@+id/medicine_type"
                style="@style/EditText"
                android:entries="@array/Medicine_type"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/dosage"
                style="@style/EditText"
                android:hint="@string/enter_the_dosage" />

            <Spinner
                android:id="@+id/p_name"
                style="@style/EditText"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/d_name"
                style="@style/EditText"
                android:spinnerMode="dropdown" />

            <Button
                android:id="@+id/med_add"
                style="@style/ButtonStyle"
                android:onClick="onSaveMedicineButtonClick"
                android:text="@string/save" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>